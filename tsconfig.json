{
	"compilerOptions": {
		"declaration": false,
		"esModuleInterop": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "esnext",
		"lib": ["ESNext"],
		"outDir": "./",
		"rootDir": "./src"
	},
	"include": ["src"],
	"exclude": [
		"**/node_modules",
		"**/examples",
		"**/dist",
		"**/*.test.ts",
		"**/*.e2e.ts",
		"**/templates"
	]
}
